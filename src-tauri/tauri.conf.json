{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "notification-listener-project",
  "version": "0.1.0",
  "identifier": "com.x.notification-listener-project",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:51001",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "window-controls",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-close",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:window:allow-set-always-on-top",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:event:allow-unlisten"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "notification-listener-project",
        "width": 800,
        "height": 600,
        "visible": true,
        "skipTaskbar": true,
        "decorations": false,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
